function gerarAsterisk (param){
  let linhas = "*";
  let colunas = "*";
    if (param > 1){
      for (let i = 2; i > 0; i--){
        console.log(linhas+colunas);
      }
      while (param > 2){
        console.log(linhas+colunas+colunas);
        param++;
      }
    }else{
        console.log("Parâmetro indevido para função.");
    }
}
gerarAsterisk(3);